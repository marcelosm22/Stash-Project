<div class="the-big-list-page-cotainer">

    <div class="list-user-information">
        <div class="list-profile-img">
          <%= link_to user_path(@list.user) do %>
          <%= cl_image_tag (@list.user.photo.key).to_s, height: 50, width: 50, crop: :fill, :radius => "max" %>
          <% end %>
        </div>
        <div class="usernme">
          <p><%=  @list.user.username%></p>
        </div>
    </div>

        <div class="list-title">
          <p class="list-title-title"><%= @list.title %></p>
             <div data-controller="tom-select"
                  data-map-items-value="<%= @items.to_json %>">
             </div>
             <div class= "list-search-show">
                  <%= simple_form_for [@list, @bookmark] do |f| %>
                  <%= f.input :forum, collection: Forum.all, input_html: { data: { controller: "tom-select", tom_select_itens_value: @items.to_json }, style: "width: 300px; height: 50px;" }, label: false %>
                  <%= f.submit "+"%>
                  <% end %>
             </div>
         </div>






    <div class="div-list-items-grid">
        <% @list.forums.each do |forum| %>
          <div class="list-show-img">
            <%= link_to forum_path(forum) do %>
            <% if forum.category == "Movies" %>
            <%= cl_image_tag (forum.photo.key).to_s, height: 280, width: 200 %>
            <% elsif forum.category = "Music" %>
            <%= cl_image_tag (forum.photo.key).to_s, height: 200, width: 200 %>
            <% else %>
            <%= cl_image_tag (forum.photo.key).to_s, height: 280, width: 200 %>
            <% end %>
            <% end %>
              <div class="middle">
                <div class="list-delete-button">
                  <% bookmark = Bookmark.find_by(list: @list, forum: forum ) %>
                  <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete}, class: "delete-hover-button" %>
                </div>
              </div>
          </div>
        <% end %>
    </div>

    <p><%= link_to "Delete this list", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>

</div>
